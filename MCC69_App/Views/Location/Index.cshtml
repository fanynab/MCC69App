@model IEnumerable<API.Models.Location>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1 align="center">Location Data</h1>
    <p>
        <a class="btn btn-default" data-toggle="modal" data-target="#addLocation" onclick="Create()">Create New</a>
    </p>
    <div id="container-body">
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Street Address</th>
                    <th scope="col">Postal Code</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody id="bodyLocation"></tbody>
        </table>
    </div>
</div>


@*CREATE*@
<div class="modal fade" id="addLocation" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Location</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <form>
                            <div class="form-group">
                                <label class="control-label">Street Address</label>
                                <input class="form-control" id="addStreetAddress" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Postal Code</label>
                                <input class="form-control" type="number" id="addPostalCode" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">City</label>
                                <input class="form-control" id="addCity" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Country_Id</label>
                                <input class="form-control" type="number" id="addCountryId" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" id="buttonAdd" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*EDIT*@
<div class="modal fade" id="editLocation" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Location</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <form>
                            <div class="form-group">
                                <label class="control-label">Street Address</label>
                                <input class="form-control" id="streetAddress" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Postal Code</label>
                                <input class="form-control" type="number" id="postalCode" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">City</label>
                                <input class="form-control" id="city" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Country_Id</label>
                                <input class="form-control" type="number" id="countryId" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save Changes" class="btn btn-primary" id="buttonEdit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


