@model IEnumerable<API.Models.Job>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1 align="center">Job Data</h1>
    <p>
        <a class="btn btn-default" data-toggle="modal" data-target="#addJob" onclick="Create()">Create New</a>
    </p>
    <div id="container-body">
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Job Title</th>
                    <th scope="col">Min Salary</th>
                    <th scope="col">Max Salary</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody id="bodyJob"></tbody>
        </table>
    </div>
</div>


@*CREATE*@
<div class="modal fade" id="addJob" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Job</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <form>
                            <div class="form-group">
                                <label class="control-label">Job Title</label>
                                <input class="form-control" id="addJobTitle" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Min Salary</label>
                                <input class="form-control" type="number" id="addMinSalary" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Max Salary</label>
                                <input class="form-control" type="number" id="addMaxSalary" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" id="buttonAdd" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*EDIT*@
<div class="modal fade" id="editJob" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Job</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <form>
                            <div class="form-group">
                                <label class="control-label">Job Title</label>
                                <input class="form-control" id="jobTitle" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Min Salary</label>
                                <input class="form-control" type="number" id="minSalary" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Max Salary</label>
                                <input class="form-control" type="number" id="maxSalary" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save Changes" class="btn btn-primary" id="buttonEdit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


